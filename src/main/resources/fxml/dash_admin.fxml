<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Text?>

<BorderPane fx:controller="com.roomy.Controller.DashAdminController"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-color: #000000;"
            prefHeight="750.0" prefWidth="1300.0">

    <top>
        <HBox style="-fx-background-color: #2d0c13; -fx-padding: 12 25; -fx-alignment: CENTER_LEFT;" spacing="20">
            <ImageView fx:id="logo" fitHeight="45.0" fitWidth="140.0" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.png"/>
                </image>
            </ImageView>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="lblAdminName" text="Bienvenue, Admin"
                   style="-fx-text-fill: #EFDFC5; -fx-font-size: 16px; -fx-font-weight: bold;"/>

            <Button fx:id="btnMenu" text="☰" onAction="#toggleMenu"
                    style="-fx-background-color: transparent; -fx-text-fill: #A59090; -fx-font-size: 18px;
                           -fx-cursor: hand; -fx-padding: 6 12;"/>

            <Button fx:id="btnLogout" text="Déconnexion" onAction="#handleLogout"
                    style="-fx-background-color: transparent; -fx-text-fill: #A59090; -fx-font-size: 13px;
                           -fx-cursor: hand; -fx-padding: 6 12;"/>
        </HBox>
    </top>

    <left>
        <VBox fx:id="leftMenu"
              prefWidth="220"
              minWidth="220"
              maxWidth="220"
              style="-fx-background-color: #2d0c13; -fx-padding: 25 15;"
              spacing="12">

            <Button fx:id="btnValidation" text="Validation Établissements" onAction="#showValidation"
                    prefWidth="200.0" prefHeight="45.0"
                    style="-fx-background-color: #A59090; -fx-text-fill: #380F17; -fx-font-size: 13px;
                           -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand;"/>

            <Button fx:id="btnUsers" text="Gestion Utilisateurs" onAction="#showUsers"
                    prefWidth="200.0" prefHeight="45.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-font-size: 13px;
                           -fx-background-radius: 12; -fx-cursor: hand;"/>

            <Button fx:id="btnStats" text="Statistiques Globales" onAction="#showStats"
                    prefWidth="200.0" prefHeight="45.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-font-size: 13px;
                           -fx-background-radius: 12; -fx-cursor: hand;"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Text text="Roomy Admin Manager"
                  style="-fx-fill: #A59090; -fx-font-size: 11px;"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="centerStack" style="-fx-background-color: #000000; -fx-padding: 20;">

            <!-- VALIDATION PANE -->
            <AnchorPane fx:id="validationPane" visible="true">
                <VBox spacing="12" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
                      AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

                    <HBox style="-fx-background-color: #f2d6c6; -fx-padding: 10 15; -fx-background-radius: 8;">
                        <Label text="Validation des demandes de collaboration"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1a1a1a;" />
                    </HBox>

                    <ScrollPane fitToWidth="true" fitToHeight="true"
                                style="-fx-background: transparent; -fx-background-color: transparent;"
                                VBox.vgrow="ALWAYS">
                        <VBox fx:id="validationList" spacing="0"
                              style="-fx-background-color: #1a1a1a; -fx-background-radius: 8; -fx-padding: 0;">
                        </VBox>
                    </ScrollPane>
                </VBox>
            </AnchorPane>

            <!-- USERS -->
            <AnchorPane fx:id="usersPane" visible="false">
                <VBox spacing="12" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
                      AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

                    <HBox style="-fx-background-color: #f2d6c6; -fx-padding: 10 15; -fx-background-radius: 8;">
                        <Label text="Gestion des utilisateurs"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1a1a1a;" />
                    </HBox>

                    <HBox spacing="12" VBox.vgrow="ALWAYS">
                        <VBox HBox.hgrow="ALWAYS" spacing="8"
                              style="-fx-background-color: #0a0a0a; -fx-background-radius: 12; -fx-border-color: #333;">
                            <Label text="ACTIFS" style="-fx-text-fill: #4a9d5f; -fx-font-weight: bold; -fx-padding: 10; -fx-font-size: 13px;" />
                            <ScrollPane fitToWidth="true" fitToHeight="true"
                                        style="-fx-background: transparent; -fx-background-color: transparent;"
                                        VBox.vgrow="ALWAYS">
                                <FlowPane fx:id="activeUsersFlow" hgap="10" vgap="10"
                                          alignment="TOP_CENTER" style="-fx-padding: 8;" />
                            </ScrollPane>
                        </VBox>

                        <VBox HBox.hgrow="ALWAYS" spacing="8"
                              style="-fx-background-color: #0a0a0a; -fx-background-radius: 12; -fx-border-color: #333;">
                            <Label text="BLOQUÉS" style="-fx-text-fill: #c74444; -fx-font-weight: bold; -fx-padding: 10; -fx-font-size: 13px;" />
                            <ScrollPane fitToWidth="true" fitToHeight="true"
                                        style="-fx-background: transparent; -fx-background-color: transparent;"
                                        VBox.vgrow="ALWAYS">
                                <FlowPane fx:id="blockedUsersFlow" hgap="10" vgap="10"
                                          alignment="TOP_CENTER" style="-fx-padding: 8;" />
                            </ScrollPane>
                        </VBox>
                    </HBox>
                </VBox>
            </AnchorPane>

            <!-- STATS PANE -->
            <AnchorPane fx:id="statsPane" visible="false">
                <VBox spacing="12" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
                      AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

                    <HBox style="-fx-background-color: #f2d6c6; -fx-padding: 10 15; -fx-background-radius: 8;">
                        <Label text="Statistiques"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1a1a1a;" />
                    </HBox>

                    <ScrollPane fitToWidth="true" fitToHeight="true"
                                style="-fx-background: transparent; -fx-background-color: transparent;"
                                VBox.vgrow="ALWAYS">
                        <VBox fx:id="statsList" spacing="12"
                              style="-fx-background-color: transparent; -fx-padding: 5;">
                        </VBox>
                    </ScrollPane>
                </VBox>
            </AnchorPane>

        </StackPane>
    </center>
</BorderPane>