<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.roomy.Controller.HotelDetailsController"
            style="-fx-background-color: linear-gradient(to bottom, #EFDFC5, #F5F0E8);">

    <top>
        <HBox style="-fx-background-color: linear-gradient(to right, #380F17, #252B2B); -fx-padding: 15 20; -fx-border-color: #4C4F54; -fx-border-width: 0 0 1 0;">
            <Button fx:id="backButton" text="â† Back to Hotels"
                    onAction="#handleBack"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-border-color: #8F0B13; -fx-border-width: 2; -fx-border-radius: 15; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14px; -fx-pref-width: 140px; -fx-pref-height: 35px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="bookButton" text="Book Now"
                    onAction="#handleBooking"
                    style="-fx-background-color: #8F0B13; -fx-text-fill: #EFDFC5; -fx-font-weight: bold; -fx-pref-width: 120px; -fx-pref-height: 40px; -fx-background-radius: 15; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="30" style="-fx-padding: 30; -fx-background-color: transparent;">

                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 15; -fx-border-color: #4C4F54; -fx-border-width: 1; -fx-border-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(56,15,23,0.15), 10, 0, 0, 2);">
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label fx:id="hotelNameLabel"
                               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #380F17;"/>
                        <Label fx:id="starsLabel"
                               style="-fx-font-size: 24px; -fx-text-fill: #FFD700;"/>
                    </HBox>

                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label fx:id="locationLabel"
                               style="-fx-font-size: 18px; -fx-text-fill: #4C4F54;"/>
                        <Label fx:id="priceRangeLabel"
                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #8F0B13;"/>
                    </HBox>
                </VBox>

                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 15; -fx-border-color: #4C4F54; -fx-border-width: 1; -fx-border-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(56,15,23,0.15), 10, 0, 0, 2);">
                    <Label text="Photos"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #380F17;"/>
                    <FlowPane fx:id="imagesContainer" hgap="15" vgap="15"
                              style="-fx-padding: 10px;"/>
                </VBox>

                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 15; -fx-border-color: #4C4F54; -fx-border-width: 1; -fx-border-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(56,15,23,0.15), 10, 0, 0, 2);">
                    <Label text="Description"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #380F17;"/>
                    <Label fx:id="descriptionLabel" wrapText="true"
                              style="-fx-font-size: 16px; -fx-text-fill: #252B2B; -fx-font-family: 'Segoe UI', Arial, sans-serif; -fx-line-spacing: 2px;"/>
                </VBox>

                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 15; -fx-border-color: #4C4F54; -fx-border-width: 1; -fx-border-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(56,15,23,0.15), 10, 0, 0, 2);">
                    <Label text="Services and Amenities"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #380F17;"/>
                    <FlowPane fx:id="servicesContainer" hgap="10" vgap="10"
                              style="-fx-padding: 10px;"/>
                </VBox>

                <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 15; -fx-border-color: #4C4F54; -fx-border-width: 1; -fx-border-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(56,15,23,0.15), 10, 0, 0, 2);">
                    <Label text="Available Rooms"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #380F17;"/>
                    <VBox fx:id="roomsContainer" spacing="20"
                          style="-fx-padding: 10px;"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>