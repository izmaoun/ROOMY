<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<!-- CORRECTION DU CONTROLLER ICI -->
<ScrollPane fitToWidth="true" style="-fx-background-color: #F5F0E6;"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.roomy.Controller.Chambres_Control">
    <content>
        <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #F5F0E6;">

            <!-- HEADER -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Text text="Gestion des Chambres" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #380F17;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Hôtel :" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="comboFiltreHotel" prefWidth="250" promptText="Choisir un hôtel..."/>
            </HBox>

            <Separator/>

            <!-- TABLEAU -->
            <TableView fx:id="tableChambres" prefHeight="350.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <columns>
                    <TableColumn fx:id="colNum" text="N°" prefWidth="60"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="colPrix" text="Prix/Nuit" prefWidth="100"/>
                    <TableColumn fx:id="colCapacite" text="Capacité" prefWidth="80"/>
                    <TableColumn fx:id="colSurface" text="Surface (m²)" prefWidth="90"/>
                    <TableColumn fx:id="colStatut" text="Statut" prefWidth="120"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT">
                <Button text="Supprimer la sélection" onAction="#handleSupprimer"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;"/>
            </HBox>

            <Separator/>

            <!-- FORMULAIRE -->
            <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" spacing="15">
                <Text text="Ajouter une nouvelle chambre" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #380F17;"/>

                <GridPane hgap="15" vgap="15">
                    <Label text="Numéro :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtNum" promptText="Ex: 101" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Type :" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="comboType" promptText="Type" prefWidth="200" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Prix (DH) :" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtPrix" promptText="Ex: 500.00" GridPane.columnIndex="5" GridPane.rowIndex="0"/>

                    <Label text="Capacité :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtCapacite" promptText="Ex: 2" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Surface :" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtSurface" promptText="Ex: 25" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <Label text="Statut :" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="comboStatut" promptText="Statut" prefWidth="200" GridPane.columnIndex="5" GridPane.rowIndex="1"/>

                    <Label text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextArea fx:id="txtDescription" prefRowCount="2" promptText="Vue sur mer..." GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="5"/>
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="15">
                    <Button text="Vider les champs" onAction="#handleVider" style="-fx-background-color: #ccc;"/>
                    <Button text="Ajouter Chambre" onAction="#handleAjouter"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand;"/>
                </HBox>
            </VBox>

        </VBox>
    </content>
</ScrollPane>