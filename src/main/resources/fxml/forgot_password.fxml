<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.roomy.Controller.ForgotPasswordController"
            style="-fx-background-color: #380F17;"
            prefHeight="600" prefWidth="800">

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                        style="-fx-background: transparent; -fx-background-color: transparent;">
            <HBox alignment="CENTER">
                <VBox alignment="CENTER" spacing="25" maxWidth="450" prefWidth="450"
                      style="-fx-padding: 40;">

                <!-- Logo -->
                    <ImageView fitWidth="200"
                               fitHeight="80"
                               preserveRatio="true">
                        <Image url="@../images/logo.png"/>
                    </ImageView>

                    <!-- Title -->
                    <Text text="Réinitialisation du mot de passe"
                          style="-fx-fill: #EFDFC5; -fx-font-size: 26; -fx-font-weight: bold;"/>

                    <!-- Form Fields -->
                    <VBox alignment="CENTER" spacing="15" prefWidth="350">

                        <TextField fx:id="emailField"
                                   promptText="Votre email"
                                   prefHeight="40"
                                   style="-fx-background-color: #EFDFC5;
                                          -fx-background-radius: 10;
                                          -fx-padding: 10;
                                          -fx-font-size: 14;
                                          -fx-prompt-text-fill: black;"/>

                        <Button text="Envoyer OTP"
                                onAction="#handleOTPmdp"
                                prefHeight="40"
                                prefWidth="350"
                                style="-fx-background-color: #A59090;
                                       -fx-background-radius: 20;
                                       -fx-text-fill: #380F17;
                                       -fx-font-size: 15;
                                       -fx-font-weight: bold;"/>

                        <TextField fx:id="otpField"
                                   promptText="Code OTP"
                                   prefHeight="40"
                                   style="-fx-background-color: #EFDFC5;
                                          -fx-background-radius: 10;
                                          -fx-padding: 10;
                                          -fx-font-size: 14;
                                          -fx-prompt-text-fill: black;"/>

                        <PasswordField fx:id="newPassField"
                                       promptText="Nouveau mot de passe"
                                       prefHeight="40"
                                       style="-fx-background-color: #EFDFC5;
                                          -fx-background-radius: 10;
                                          -fx-padding: 10;
                                          -fx-font-size: 14;
                                          -fx-prompt-text-fill: black;"/>

                        <PasswordField fx:id="confirmPassField"
                                       promptText="Confirmer le mot de passe"
                                       prefHeight="40"
                                       style="-fx-background-color: #EFDFC5;
                                          -fx-background-radius: 10;
                                          -fx-padding: 10;
                                          -fx-font-size: 14;
                                          -fx-prompt-text-fill: black;"/>

                    </VBox>

                    <!-- Reset Button -->
                    <Button text="Réinitialiser"
                            onAction="#handleResetPassword"
                            prefWidth="350" prefHeight="45"
                            style="-fx-background-color: #A59090;
                                   -fx-background-radius: 20;
                                   -fx-text-fill: #380F17;
                                   -fx-font-size: 16;
                                   -fx-font-weight: bold;"/>

                    <Label fx:id="lblInfo"
                           style="-fx-text-fill: red; -fx-font-size: 14;"/>

                    <Button text="Retour"
                            onAction="#goBack"
                            style="-fx-background-color: transparent;
                                   -fx-text-fill: #A59090;
                                   -fx-font-size: 14;
                                   -fx-cursor: hand;"/>

                </VBox>
            </HBox>
        </ScrollPane>
    </center>

</BorderPane>
