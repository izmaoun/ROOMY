<?xml version="1.0" encoding="UTF-8"?>
<!-- File: src/main/resources/fxml/mes_hotels.fxml -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.14"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.roomy.Controller.Hotels_control"
            style="-fx-background-color: #380F17;"
            prefHeight="900.0" prefWidth="1200.0">

    <!-- Top (même style que dashboard_hotelier.fxml) -->
    <top>
        <HBox style="-fx-background-color: #2d0c13; -fx-padding: 20 40; -fx-alignment: CENTER_LEFT;" spacing="30">
            <ImageView fitHeight="60.0" fitWidth="200.0" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.png"/>
                </image>
            </ImageView>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="lblwelcome" text="Bienvenue, Utilisateur"
                   style="-fx-text-fill: #EFDFC5; -fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Button text="Déconnexion" onAction="#handleDeconnexion"
                    style="-fx-background-color: transparent; -fx-text-fill: #A59090; -fx-font-size: 15px;
                           -fx-cursor: hand; -fx-padding: 8 20;">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0"/>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- Menu gauche (même style que dashboard_hotelier.fxml) -->
    <left>
        <VBox style="-fx-background-color: #2d0c13; -fx-padding: 40 25;" spacing="20">
            <Button text="Tableau de bord" onAction="#goToDashboard"
                    prefWidth="240.0" prefHeight="55.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-font-size: 16px;
                           -fx-background-radius: 15; -fx-cursor: hand;"/>
            <Button text="Mes hôtels" onAction="#goToMesHotels"
                    prefWidth="240.0" prefHeight="55.0"
                    style="-fx-background-color: #A59090; -fx-text-fill: #380F17; -fx-font-size: 17px;
                           -fx-font-weight: bold; -fx-background-radius: 15; -fx-cursor: hand;"/>
            <Button text="Chambres" onAction="#goToChambres"
                    prefWidth="240.0" prefHeight="55.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-font-size: 16px;
                           -fx-background-radius: 15; -fx-cursor: hand;"/>
            <Button text="Statistiques" onAction="#goToStatistiques"
                    prefWidth="240.0" prefHeight="55.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-font-size: 16px;
                           -fx-background-radius: 15; -fx-cursor: hand;"/>
            <Button text="Profil" onAction="#goToProfil"
                    prefWidth="240.0" prefHeight="55.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-font-size: 16px;
                           -fx-background-radius: 15; -fx-cursor: hand;"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Text text="Roomy Hotel Manager"
                  style="-fx-fill: #A59090; -fx-font-size: 13px;"/>
        </VBox>
    </left>

    <!-- Contenu central : grille d'icônes + bouton ajouter -->
    <center>
        <VBox spacing="30" alignment="TOP_CENTER"
              style="-fx-padding: 50; -fx-background-color: #F5F0E6;">
            <Text text="Mes hôtels"
                  style="-fx-fill: #380F17; -fx-font-size: 42px; -fx-font-weight: bold;"/>

            <HBox alignment="CENTER_RIGHT" style="-fx-padding: 0 60 0 0;">
                <Button fx:id="btnAddHotel" text="+ Ajouter un nouvel hôtel" onAction="#openAddHotelForm"
                        prefWidth="320" prefHeight="60"
                        style="-fx-background-color: #A59090; -fx-text-fill: #380F17;
                           -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;
                           -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0, 0, 5);"/>
            </HBox>

            <!-- Zone défilable contenant des "cartes" icônes -->
            <ScrollPane fitToWidth="true" prefHeight="600" style="-fx-background: transparent; -fx-border-color: transparent;">
                <content>
                    <FlowPane fx:id="flowHotels" hgap="24" vgap="24" padding="20" prefWrapLength="1000" alignment="TOP_LEFT"/>
                </content>
            </ScrollPane>

            <Label fx:id="lblNoHotels" text="Vous n'avez pas encore ajouté d'hôtel."
                   visible="false" managed="false"
                   style="-fx-font-size: 18px; -fx-text-fill: #888; -fx-padding: 50 0 0 0;"/>
        </VBox>
    </center>

</BorderPane>