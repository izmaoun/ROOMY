<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="30" alignment="TOP_CENTER"
      style="-fx-padding: 50; -fx-background-color: #F5F0E6;"
      xmlns="http://javafx.com/javafx/17.0.8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.roomy.Controller.Hotels_control">

    <Text text="Mes hôtels"
          style="-fx-fill: #380F17; -fx-font-size: 42px; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 0 60 0 0;">
        <Button fx:id="btnAddHotel" text="+ Ajouter un nouvel hôtel" onAction="#openAddHotelForm"
                prefWidth="320" prefHeight="60"
                style="-fx-background-color: #A59090; -fx-text-fill: #380F17;
                       -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;
                       -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0, 0, 5);"/>
    </HBox>

    <ScrollPane fitToWidth="true" prefHeight="600" style="-fx-background: transparent; -fx-border-color: transparent;">
        <content>
            <FlowPane fx:id="flowHotels" hgap="24" vgap="24" alignment="TOP_LEFT">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </FlowPane>
        </content>
    </ScrollPane>

    <Label fx:id="lblNoHotels" text="Vous n'avez pas encore ajouté d'hôtel."
           visible="false" managed="false"
           style="-fx-font-size: 18px; -fx-text-fill: #888; -fx-padding: 50 0 0 0;"/>
</VBox>