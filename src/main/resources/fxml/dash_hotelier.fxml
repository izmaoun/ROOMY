<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane fx:id="mainBorderPane"
            xmlns="http://javafx.com/javafx/17.0.8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.roomy.Controller.Dash_hotelier_Control"
            prefHeight="900.0" prefWidth="1200.0">
    <!-- contenu identique -->
    <top>
        <HBox style="-fx-background-color: #2d0c13; -fx-padding: 20 40; -fx-alignment: CENTER_LEFT;" spacing="30">
            <ImageView fitHeight="60.0" fitWidth="200.0" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.png"/>
                </image>
            </ImageView>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="lblwelcome" text="Bienvenue, Utilisateur"
                   style="-fx-text-fill: #EFDFC5; -fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Button fx:id="btnToggleMenu" text="☰" onAction="#toggleMenu"
                    style="-fx-background-color: transparent; -fx-text-fill: #A59090; -fx-font-size: 20px;
                           -fx-cursor: hand; -fx-padding: 8 20;"/>

            <Button text="Déconnexion" onAction="#handleDeconnexion"
                    style="-fx-background-color: transparent; -fx-text-fill: #A59090; -fx-font-size: 15px;
                           -fx-cursor: hand; -fx-padding: 8 20;">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0"/>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- ==================== MENU GAUCHE ==================== -->
    <left>
        <VBox fx:id="leftMenu"
              prefWidth="220"
              minWidth="220"
              maxWidth="220"
              style="-fx-background-color: #2d0c13; -fx-padding: 25 15;"
              spacing="12">

            <Button fx:id="btnDashboard" text="Tableau de bord" onAction="#goToDashboard"
                    prefWidth="200.0" prefHeight="45.0"
                    style="-fx-background-color: #A59090; -fx-text-fill: #380F17; -fx-font-size: 13px;
                           -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand;"/>

            <Button fx:id="btnHotels" text="Mes hôtels" onAction="#goToMesHotels"
                    prefWidth="200.0" prefHeight="45.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-font-size: 13px;
                           -fx-background-radius: 12; -fx-cursor: hand;"/>

            <Button fx:id="btnChambres" text="Chambres" onAction="#goToChambres"
                    prefWidth="200.0" prefHeight="45.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-font-size: 13px;
                           -fx-background-radius: 12; -fx-cursor: hand;"/>

            <Button fx:id="btnStats" text="Statistiques" onAction="#goToStatistiques"
                    prefWidth="200.0" prefHeight="45.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-font-size: 13px;
                           -fx-background-radius: 12; -fx-cursor: hand;"/>

            <Button fx:id="btnProfile" text="Profil" onAction="#goToProfil"
                    prefWidth="200.0" prefHeight="45.0"
                    style="-fx-background-color: transparent; -fx-text-fill: #EFDFC5; -fx-font-size: 13px;
                           -fx-background-radius: 12; -fx-cursor: hand;"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Text text="Roomy Hotel Manager"
                  style="-fx-fill: #A59090; -fx-font-size: 11px;"/>
        </VBox>
    </left>

    <!-- ==================== CONTENU CENTRAL () ==================== -->
    <center>
        <VBox spacing="40" alignment="TOP_CENTER"
              style="-fx-padding: 60; -fx-background-color: #F5F0E6;">

            <!-- Titre -->
            <Text text="Tableau de bord"
                  style="-fx-fill: #380F17; -fx-font-size: 42px; -fx-font-weight: bold;"/>

            <!-- 4 cartes statistiques -->
            <HBox spacing="40" alignment="CENTER">

                <!-- Hôtels -->
                <VBox alignment="CENTER" spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 25; -fx-padding: 35;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 8);"
                      prefWidth="230" prefHeight="190">
                    <Text fx:id="txtNbHotels" text="0"
                          style="-fx-fill: #A59090; -fx-font-size: 65px; -fx-font-weight: bold;"/>
                    <Text text="Hôtels" style="-fx-fill: #380F17; -fx-font-size: 20px;"/>
                </VBox>

                <!-- Chambres total -->
                <VBox alignment="CENTER" spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 25; -fx-padding: 35;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 8);"
                      prefWidth="230" prefHeight="190">
                    <Text fx:id="txtNbChambresTotal" text="0"
                          style="-fx-fill: #A59090; -fx-font-size: 65px; -fx-font-weight: bold;"/>
                    <Text text="Chambres total" style="-fx-fill: #380F17; -fx-font-size: 19px;"/>
                </VBox>

                <!-- Disponibles -->
                <VBox alignment="CENTER" spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 25; -fx-padding: 35;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 8);"
                      prefWidth="230" prefHeight="190">
                    <Text fx:id="txtNbChambresDispo" text="0"
                          style="-fx-fill: #2d9cdb; -fx-font-size: 65px; -fx-font-weight: bold;"/>
                    <Text text="Disponibles" style="-fx-fill: #380F17; -fx-font-size: 19px;"/>
                </VBox>

                <!-- Occupées -->
                <VBox alignment="CENTER" spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 25; -fx-padding: 35;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 8);"
                      prefWidth="230" prefHeight="190">
                    <Text fx:id="txtNbChambresOccupees" text="0"
                          style="-fx-fill: #e74c3c; -fx-font-size: 65px; -fx-font-weight: bold;"/>
                    <Text text="Occupées" style="-fx-fill: #380F17; -fx-font-size: 19px;"/>
                </VBox>
            </HBox>

            <!-- Bouton ajouter hôtel -->
            <Button text="+ Ajouter un nouvel hôtel" onAction="#goToMesHotels"
                    prefWidth="350.0" prefHeight="65.0"
                    style="-fx-background-color: #A59090; -fx-text-fill: #380F17;
                           -fx-font-size: 19px; -fx-font-weight: bold; -fx-background-radius: 20;
                           -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0, 0, 5);"/>
        </VBox>
    </center>
</BorderPane>
