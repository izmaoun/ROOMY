<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.roomy.Controller.SingupHotelier"
            style="-fx-background-color: #380F17;"
            prefHeight="600" prefWidth="800">

    <VBox alignment="CENTER" spacing="30" prefWidth="400"
          AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0"
          AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0">

        <!-- Titre -->
        <Text text="Inscription Hôtel"
              style="-fx-fill: #EFDFC5; -fx-font-size: 28; -fx-font-weight: bold;"/>

        <!-- Formulaire -->
        <VBox alignment="CENTER_LEFT" spacing="15" prefWidth="350">

            <!-- Nom de l'Hôtel -->
            <VBox spacing="5">
                <Label text="Nom de l'Hôtel" style="-fx-text-fill: #EFDFC5; -fx-font-size: 14;"/>
                <TextField fx:id="nomHotelierId" prefWidth="350" prefHeight="40"
                           style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
            </VBox>


            <!-- Ville -->
            <VBox spacing="5">
                <Label text="Ville"
                       style="-fx-text-fill: #EFDFC5; -fx-font-size: 14;"/>
                <TextField fx:id="villeId" prefWidth="350" prefHeight="40"
                           style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="E-mail du Gérant"
                       style="-fx-text-fill: #EFDFC5; -fx-font-size: 14;"/>
                <TextField fx:id="emailId" prefWidth="350" prefHeight="40"
                           style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
            </VBox>

            <!-- Mot de passe -->
            <VBox spacing="5">
                <Label text="Mot de passe" style="-fx-text-fill: #EFDFC5; -fx-font-size: 14;"/>
                <PasswordField fx:id="passwordId" prefWidth="350" prefHeight="40"
                               style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
            </VBox>


            <!-- Confirmer le Mot de passe -->
            <VBox spacing="5">
                <Label text="Confirmer le Mot de passe"
                       style="-fx-text-fill: #EFDFC5; -fx-font-size: 14;"/>
                <PasswordField fx:id="confirmPasswordId" prefWidth="350" prefHeight="40"
                               style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="ICE (Identifiant Commun de l'Entreprise)"
                       style="-fx-text-fill: #EFDFC5; -fx-font-size: 14;"/>
                <TextField fx:id="iceId" prefWidth="350" prefHeight="40"
                           style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
            </VBox>

        </VBox>

        <!-- Bouton S'inscrire -->
        <Button text="S'inscrire"
                prefWidth="350" prefHeight="45"
                onAction="#handleInscription"
                style="-fx-background-color: #A59090; -fx-background-radius: 20; -fx-text-fill: #380F17; -fx-font-size: 16; -fx-font-weight: bold;"/>

        <!-- Lien de connexion -->
        <HBox alignment="CENTER" spacing="5">
            <Text text="Déjà un compte ?"
                  style="-fx-fill: #EFDFC5; -fx-font-size: 14;"/>
            <Button text="Se connecter"
                    onAction="#goToLogin"
                    style="-fx-background-color: transparent; -fx-text-fill: #A59090; -fx-underline: true; -fx-font-size: 14;"/>
        </HBox>

        <!-- Bouton Retour -->
        <Button text="Retour"
                onAction="#goBack"
                style="-fx-background-color: transparent; -fx-text-fill: #A59090; -fx-font-size: 14;"/>

    </VBox>

</AnchorPane>