<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.roomy.Controller.LoginController"
            style="-fx-background-color: #380F17;"
            prefHeight="600" prefWidth="800"
            AnchorPane.topAnchor="0"
            AnchorPane.bottomAnchor="0"
            AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0">

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                    style="-fx-background: transparent; -fx-background-color: transparent;">

            <StackPane>
                <VBox alignment="CENTER" spacing="30" prefWidth="400" maxWidth="400" BorderPane.alignment="CENTER">

                    <VBox prefHeight="30"/>

                    <HBox alignment="CENTER">
                        <ImageView fitWidth="200"
                                   fitHeight="80"
                                   preserveRatio="true">
                            <Image url="@../images/logo.png"/>
                        </ImageView>
                    </HBox>

                    <!-- Espace entre le logo et le titre -->
                    <VBox prefHeight="40"/>

                    <!-- Title -->
                    <Text text="Connexion"
                          style="-fx-fill: #EFDFC5; -fx-font-size: 28; -fx-font-weight: bold;"/>

                    <!-- Message d'erreur -->
                    <Label fx:id="lblError" text=""
                           style="-fx-text-fill: #ff6b6b; -fx-font-size: 14; -fx-wrap-text: true;"
                           prefWidth="350"/>

                    <!-- Form -->
                    <VBox alignment="CENTER" spacing="15" prefWidth="350">

                        <TextField fx:id="txtEmail" promptText="E-mail"
                                   prefWidth="350" prefHeight="40"
                                   style="-fx-background-color: #EFDFC5;
                                      -fx-prompt-text-fill: #666666;
                                      -fx-background-radius: 10;
                                      -fx-padding: 10;
                                      -fx-border-radius: 10;
                                      -fx-font-size: 14;"/>

                        <PasswordField fx:id="txtPassword" promptText="Mot de passe"
                                       prefWidth="350" prefHeight="40"
                                       style="-fx-background-color: #EFDFC5;
                                          -fx-prompt-text-fill: #666666;
                                          -fx-background-radius: 10;
                                          -fx-padding: 10;
                                          -fx-border-radius: 10;
                                          -fx-font-size: 14;"/>

                    </VBox>

                    <!-- Button -->
                    <Button text="Se connecter"
                            prefWidth="350" prefHeight="45"
                            onAction="#handleLogin"
                            style="-fx-background-color: #A59090;
                               -fx-background-radius: 20;
                               -fx-text-fill: #380F17;
                               -fx-font-size: 16;
                               -fx-font-weight: bold;
                               -fx-cursor: hand;"/>

                    <!-- Mot de passe oublié -->
                    <Button text="Mot de passe oublié ?"
                            onAction="#handleForgotPassword"
                            style="-fx-background-color: transparent;
                               -fx-text-fill: #A59090;
                               -fx-underline: true;
                               -fx-font-size: 14;
                               -fx-cursor: hand;"/>

                    <HBox alignment="CENTER" spacing="5">
                        <Text text="Pas encore de compte ?"
                              style="-fx-fill: #EFDFC5; -fx-font-size: 14;"/>
                        <Button text="Créer un compte"
                                onAction="#handleSignupNav"
                                style="-fx-background-color: transparent;
                                   -fx-text-fill: #A59090;
                                   -fx-underline: true;
                                   -fx-font-size: 14;
                                   -fx-cursor: hand;"/>
                    </HBox>

                    <Button text="Retour"
                            onAction="#handleBack"
                            style="-fx-background-color: transparent;
                               -fx-text-fill: #A59090;
                               -fx-font-size: 14;
                               -fx-cursor: hand;"/>

                    <VBox prefHeight="20"/>

                </VBox>
            </StackPane>
        </ScrollPane>
    </center>

</BorderPane>